package com.bookstore.demo.util;

import java.io.BufferedOutputStream;
import java.io.File;
import java.io.FileOutputStream;

import org.springframework.web.multipart.MultipartFile;

public class UploadUtil {
	
	public static boolean fazerUploadImagem(MultipartFile imagem) {
		
		boolean succesUpload = false;
		
		if (!imagem .isEmpty()) {
			String nomeArquivo = imagem.getOriginalFilename();
			
			try {
				
				String pastaUploadImagem = "C:\\Users\\Th√©o Nicoleli\\Desktop\\BookStore FullStack\\BookStore-Angular\\Bookstore_Ang\\src\\assets\\img";
				
				File dir = new File(pastaUploadImagem);
				
				if (!dir.exists()) {
					dir.mkdirs();
				}
				
				File serverFile = new File(dir.getAbsolutePath() + File.separator + nomeArquivo);
				
				BufferedOutputStream stream = new BufferedOutputStream(new FileOutputStream(serverFile));
				
				stream.write(imagem.getBytes());
				stream.close();
				
				
				
				
			} catch (Exception e) {
				
			}
		}
		return succesUpload;
	}

}
